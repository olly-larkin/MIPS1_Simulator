#!/bin/bash

SIM=$1
rm -f -rf test/output
mkdir -p test/output
OUTFILE="test/output/out.csv"
echo "" > $OUTFILE

FAILED_TESTS=()

RUN_TEST() {
    TEST_ID=$1
    INSTRUCTION=$2
    AUTHOR=$3
    EXPECTED_OUTCOME=$5
    EXPECTED_OUTPUT=$7
    DEP=$8
    OUTPUT=$(echo $6 | $SIM test/temp/$TEST_ID.bin 2> /dev/null)
    EC=$?
    if [[ "$EC" = $EXPECTED_OUTCOME ]] && [[ $EXPECTED_OUTPUT = $OUTPUT ]]
    then
    	STATUS="Pass"
    else
        STATUS="Fail"
        FAILED_TESTS+=($TEST_ID)
    fi
    if [[ "$DEP" = "" ]]
    then
        if [[ "$EXPECTED_OUTPUT" = "" ]]
        then
            MESSAGE="$4 - Exected exit code $EXPECTED_OUTCOME - Exited with code $EC"
        else
            MESSAGE="$4 - Exected exit code $EXPECTED_OUTCOME - Exited with code $EC - Expected output \"$EXPECTED_OUTPUT\" - Recieved output \"$OUTPUT\""
        fi
    else
        if [[ "$EXPECTED_OUTPUT" = "" ]]
        then
            MESSAGE="$4 (dependant on: $DEP) - Exected exit code $EXPECTED_OUTCOME - Exited with code $EC"
        else
            MESSAGE="$4 (dependant on: $DEP) - Exected exit code $EXPECTED_OUTCOME - Exited with code $EC - Expected output \"$EXPECTED_OUTPUT\" - Recieved output \"$OUTPUT\""
        fi
    fi
    echo $TEST_ID", "$INSTRUCTION", "$STATUS", "$AUTHOR", "$MESSAGE >> $OUTFILE
    echo $TEST_ID", "$INSTRUCTION", "$STATUS", "$AUTHOR", "$MESSAGE
}

#************** WORK BELOW HERE ****************

# RUN_TEST "test_id" "instr" "author" "message" expected_code "stdin" "expected_stdout"

FILES="tbench_src/text_files/*.txt"
for f in $FILES; do

    exec 5< $f

    fileName=${f##*/}
    test_id=${fileName%%.*}
    read -r line <&5
    instr="${line:1:${#line}-1}"
    read -r line <&5
    author="${line:1:${#line}-1}"
    read -r line <&5
    message="${line:1:${#line}-1}"
    read -r line <&5
    expected_code="$(echo -e "${line:1:${#line}-1}" | tr -d '[:space:]')"
    read -r line <&5
    stdin="${line:1:${#line}-1}"
    read -r line <&5
    expected_stdout="${line:1:${#line}-1}"
    read -r line <&5
    dependancies="${line:1:${#line}-1}"

    RUN_TEST "$test_id" "$instr" "$author" "$message" "$expected_code" "$stdin" "$expected_stdout" "$dependancies"
done

#************** WORK ABOVE HERE ****************
